<resources>

    <style name="Theme.Immersion" parent="@style/BaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Theme.Normal" parent="@style/BaseTheme" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/AppAnimation</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/no_change_default</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_change_default</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_from_left</item>
    </style>

</resources>